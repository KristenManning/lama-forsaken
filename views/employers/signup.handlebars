<h2 class="signup-heading">Employer</h2>
  <div class="col-md-6 col-md-offset-3">
          <form class="signup" action = "/api/employer-signup" method = "POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="email-input" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="password-input" placeholder="Password">
            </div>
            <div class="form-group">
              <label>Your Name</label>
              <input name = "userName" type="text" class="form-control" id="userName-input" placeholder="Account Owner's Name">
            </div>
            <div class="form-group">
              <label>Company Name</label>
              <input name = "name" type="text" class="form-control" id="realName-input" placeholder="Company">
            </div>
            <div class="form-group">
              <label>Location</label>
              <input name = "location" type="text" class="form-control" id="location-input" placeholder="Location">
            </div>
            <div class="form-group">
              <label>Industry</label>
              <input name = "industry" type="text" class="form-control" id="industry-input" placeholder="Industry">
            </div>

           <input type="hidden" id="isEmployer-input" value="1">

          <div class="modal-footer">
            <button type="submit" class="btn btn-default">Sign Me Up!</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Nevermind</button>
          </form>

</div>

  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script type="text/javascript" src="javascript/signup.js"></script>