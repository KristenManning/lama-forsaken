<div class = "container">
	<div class = "row">
		<div class = "col-md-12">
		<h2>Search Results</h2>

		<form action="/search" method="GET">
        <div class="form-group">
          <input type="text" name="keyword" class="form-control" value="{{originalQuery.keyword}}">
        </div>
        <div class="form-group">
          <select name = "searchType" class="form-control">
            <option >Anonymous Profiles</option>
            <option >Public Networking Bios</option>
            <option >Open Positions</option>
          </select>
        </div>

        <button type="submit" class="btn btn-default">Search</button>
    </form>

		</div>
	</div>

  <div class = "row job-tiles-container">
    
    {{#each result}}

    <div class = "col-md-3 job-tile" id="jt{{id}}">
      <h4>{{title}}</h4>
      <h5>at <a href="job/company/{{Company.id}}">{{Company.name}}</a></h5>
      <h5>{{location}}</h5>


      <div type="button" data-toggle="modal" data-target="#jobModal{{id}}">
    
      <span class="corner-icon glyphicon glyphicon-resize-full"></span>
    </div>
    </div>
    {{/each}}

  </div>
  <!-- </div> -->
  
</div>
  

  {{#each result}}
    <div id="jobModal{{id}}" class="modal fade" role="dialog">

      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3>{{title}}</h3>
            <h4>{{location}}</h4>
         </div>
         <div class="modal-body">
        <h6>Description:</h6>
        {{#if description}}
        <div>{{{findLineBreaks description}}} </div>
        {{/if}}
        <br>
        <h6>Responsibilities:</h6>
        {{#if description}}
        <div> {{{findLineBreaks responsibilities}}} </div>
        {{/if}}
        <br>
        <h6>Qualifications: </h6>
        {{#if qualifications}}
        <div>{{{findLineBreaks qualifications}}} </div>
        {{/if}}
        <br>
        </div>
      

        <div class="modal-footer">
            <button type="submit" class="start-convo btn btn-large btn-danger">Contact {{Company.name}} About This Position</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      </div>

    </div>
  {{/each}}

</div>