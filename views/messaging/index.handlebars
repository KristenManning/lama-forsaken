
<div class="container col-md-4">
  <h2>Conversations</h2>
  <div id="conversations">
  </div>
</div>

<div class="container col-md-8">
  {{#each conversations}}
  <div>
  </div>
  {{/each}}
  <div>
    <h2>Messages</h2>
    <div id="messages"></div>
    <h2>New Message</h2>
    <form id="chat-form" action="">
      <div class="form-group">
        <input id="subject" placeholder="Subject" />
        <textarea id="message" placeholder="Message" autocomplete="off" rows="8"></textarea> 
        <input id="attachment" placeholder="Attachment" />
        <br />
        <button class="btn btn-sm">Send</button>
      </div>
    </form>
  </div>
</div>